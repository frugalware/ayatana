# Compiling Time: 0.01 SBU
# Maintainer: Baste <baste@frugalware.org>

pkgname=gnome-shell-extension-righthotcorner
pkgver=1.0
pkgrel=2
pkgdesc="Adds an extra hot corner at upper right of your monitor"
url="http://www.fpmurphy.com/gnome-shell-extensions/"
depends=('gnome-shell')
groups=('gnome-extra')
archs=('i686' 'x86_64')
Finclude gnome-shell-extensions
_F_archive_name="righthotcorner"
up2date="Flasttar $url"
source=($url/$_F_archive_name-$pkgver.tar.gz)
sha1sums=('5d1302f62ffafc8db39250989f0b8909e58a99d1')
_F_cd_path="."

build()
{
	Fcd
        Fmkdir usr/share/gnome-shell/extensions/
        Fcprel righthotcorner@fpmurphy.com usr/share/gnome-shell/extensions/
	FGnomeShellVersion
}

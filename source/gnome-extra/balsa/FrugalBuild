Fconfopts="${Fconfopts[@]} --with-ssl --with-gtkprint --with-gpgme=gpgme-config \
	--with-sqlite=sqlite3 --with-gtkspell --with-gtksourceview=yes --with-unique \
	--with-nm=no --with-libnotify=yes --with-html-widget=webkit"

build() {
	Fcd
	autoreconf -f -i || Fdie

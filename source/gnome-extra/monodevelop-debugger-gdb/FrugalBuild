pkgname=monodevelop-debugger-gdb
pkgver=2.6
pkgrel=1
pkgdesc="Debugger-gdb Extension for MonoDevelop"
url="http://www.mono-project.com/"
depends=('monodevelop>=2.6' 'mono-debugger>=2.6.3')
makedepends=('intltool' 'perl-xml-parser')
groups=('gnome-extra')
replaces=('monodevelop-debugger-mdb')
archs=('i686' 'x86_64')
up2date="Flasttar http://download.mono-project.com/sources/$pkgname/"
source=(http://download.mono-project.com/sources/$pkgname/$pkgname-$pkgver.tar.gz)
options=('scriptlet')
_F_mono_aot=0
Finclude mono
sha1sums=('a6052c8f701c1a7c861c4386ce5d532a68a3930b')
Fconfopts="$Fconfopts --config=RELEASE --prefix=/usr"

build() {
	Fcd
	unset MAKEFLAGS
	Fmonoexport
	Fbuild
	Fmonocleanup
}

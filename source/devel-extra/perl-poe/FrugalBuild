pkgname=perl-poe
pkgver=1.312
pkgrel=1
pkgdesc="portable multitasking and networking framework for Perl"
_F_perl_name=POE
_F_perl_author=R/RC/RCAPUTO
Finclude perl
url="http://poe.perl.org/"
makedepends=('perl')
depends=('perl')
groups=('devel-extra')
archs=('i686' 'x86_64')

build() {
	Fcd POE-$pkgver
        PERL_MM_USE_DEFAULT=1 perl Makefile.PL || Fdie
	make || Fdie
	Fmakeinstall	
}
sha1sums=('0c1d0fe29a02b93fdab09c8ac8969a753b2fc37c')

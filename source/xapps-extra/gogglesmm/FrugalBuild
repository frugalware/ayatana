pkgname=gogglesmm
pkgver=0.12.3
pkgrel=1
pkgdesc="Music Manager and Player"
depends=('fox>=1.6.37-2' 'libxext' 'libxrender' 'libglu' 'xine-lib>=1.1.19-6' \
	'dbus' 'taglib' 'sqlite3' 'libxfixes' 'curl')
_F_googlecode_ext=".tar.bz2"
_F_gnome_iconcache="y"
_F_gnome_desktop="y"
Finclude googlecode gnome-scriptlet
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('56bb72ada84b00d2b6d0bf96bffb0d77dff2d723')
replaces=('musicmanager')

build()	{
	Fcd
	Fconf
	Fsed "\\\\" "" config.make
	make || Fdie
	make DESTDIR=$Fdestdir install || Fdie
	Fbuild_gnome_scriptlet
}


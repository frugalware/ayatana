pkgname=sigil
pkgver=0.4.0
pkgrel=1
pkgdesc="A WYSISYG ebook editor."
depends=('libqtwebkit')
makedepends=('libqtscript')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_googlecode_name="Sigil"
_F_googlecode_dirname="$pkgname"
_F_googlecode_ext="-Code.zip"
Finclude googlecode cmake
sha1sums=('c73994184800aa6753cda7107a6a2907cd390c35')

build() {
	Fcd Sigil-$pkgver-Code
	CMake_build
}

# optimization OK

pkgrel=2
pkgdesc="SQLite wrapper with a GObject-based interface"
url="https://code.google.com/p/sqlheavy/"
archs=('i686' 'x86_64')
groups=('lib-extra')
depends=('glib2' 'sqlite3')
makedepends=('vala')
up2date="Flasttar http://ftp.frugalware.org/pub/other/people/pingax/snapshots/"
source="http://ftp.frugalware.org/pub/other/people/pingax/snapshots/$pkgname-$pkgver.tar.gz"
_F_cd_path=$pkgname

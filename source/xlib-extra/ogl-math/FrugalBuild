pkgname=ogl-math
pkgver=0.9.2.3
pkgrel=1
pkgdesc="C++ mathematics library for 3D software based on the OpenGL Shading Language (GLSL) specification."
depends=()
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_name="glm"
_F_sourceforge_ext=".zip"
_F_cmake_in_source_build=1
Finclude sourceforge cmake
sha1sums=('76920f315b5aa14550e8675e9d3e4d99bf6b01e9')

build(){
	CMake_build -DGLM_TEST_MODE=ON
	Frm usr/include/glm/{Makefile,CMakeFiles,CMakeLists.txt,*.cmake}
}

# optimization OK

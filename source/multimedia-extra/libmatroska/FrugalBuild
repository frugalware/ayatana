# Compiling Time: ~0.26 SBU
# Maintainer: voroskoi <voroskoi@frugalware.org>

pkgname=libmatroska
pkgver=1.2.0
pkgrel=1
pkgdesc="libmatroska is a C++ libary to parse Matroska files (.mkv and .mka)."
url="http://dl.matroska.org/downloads/libmatroska/"
depends=('glibc' 'libgcc' 'libstdc++' 'libebml>=1.2.0')
groups=('multimedia-extra')
archs=('i686' 'x86_64' 'ppc')
up2date="Flasttar $url"
source=(http://dl.matroska.org/downloads/libmatroska/libmatroska-$pkgver.tar.bz2)

build() {
	Fcd "${pkgname}-${pkgver}/make/linux"
	make sharedlib || Fdie
	Fmakeinstall
}

sha1sums=('253a7cb0217d4c98b6adc3b7c464671569ed29e4')

# optimization OK
